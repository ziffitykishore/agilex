<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      class="Vantiv\Payment\Ui\Component\Form\Discount">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">vantiv_subscription_discount_form.vantiv_subscription_discount_form_data_source</item>
            <item name="deps" xsi:type="string">vantiv_subscription_discount_form.vantiv_subscription_discount_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Discount Form</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">vantiv_subscription_discount_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Vantiv\Payment\Block\Adminhtml\Recurring\Subscription\Discount\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Vantiv\Payment\Block\Adminhtml\Recurring\Subscription\Discount\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Vantiv\Payment\Block\Adminhtml\Recurring\Subscription\Discount\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Vantiv\Payment\Block\Adminhtml\Recurring\Subscription\Discount\Edit\SaveButton</item>
        </item>
    </argument>
    <dataSource name="vantiv_subscription_discount_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Vantiv\Payment\Model\Recurring\Subscription\Discount\DataProvider</argument>
            <argument name="name" xsi:type="string">vantiv_subscription_discount_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">discount_id</argument>
            <argument name="requestFieldName" xsi:type="string">discount_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="vantiv/recurring_discount/save"/>
                    <item name="validate_url" xsi:type="url" path="vantiv/recurring_discount/validate"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string"/>
            </item>
        </argument>
        <field name="discount_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="dataScope" xsi:type="string">discount_id</item>
                </item>
            </argument>
        </field>
        <field name="subscription_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="dataScope" xsi:type="string">subscription_id</item>
                </item>
            </argument>
        </field>
        <field name="code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Code</item>
                    <item name="notice" xsi:type="string" translate="true">Maximum length allowed is 25 characters.</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">code</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="max_text_length" xsi:type="number">25</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="notice" xsi:type="string" translate="true">Maximum length allowed is 100 characters.</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="max_text_length" xsi:type="number">100</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="amount">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Amount</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-zero-or-greater" xsi:type="boolean">true</item>
                        <item name="less-than-equals-to" xsi:type="number">9999999999.99</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="start_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Vantiv_Payment/js/form/element/date</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Start Date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataScope" xsi:type="string">start_date</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">MMM d, y</item>
                        <item name="showsTime" xsi:type="boolean">false</item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="end_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Vantiv_Payment/js/form/element/date</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">End Date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">vantiv_subscription_discount</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="dataScope" xsi:type="string">end_date</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">MMM d, y</item>
                        <item name="showsTime" xsi:type="boolean">false</item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
