<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Vantiv_Payment::payments" title="Vantiv Payments" translate="title" sortOrder="25">
                    <resource id="Vantiv_Payment::subscriptions" title="Subscriptions" translate="title" sortOrder="10">
                        <resource id="Vantiv_Payment::subscriptions_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Vantiv_Payment::subscriptions_actions_view" title="View" translate="title" sortOrder="10"/>
                            <resource id="Vantiv_Payment::subscriptions_actions_edit" title="Edit" translate="title" sortOrder="20"/>
                        </resource>
                    </resource>
                    <resource id="Vantiv_Payment::recovery_transactions" title="Subscription Recovery Transactions" translate="title" sortOrder="20">
                        <resource id="Vantiv_Payment::recovery_transactions_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Vantiv_Payment::recovery_transactions_actions_view" title="View" translate="title" sortOrder="10"/>
                            <resource id="Vantiv_Payment::recovery_transactions_actions_cancel" title="Cancel" translate="title" sortOrder="20"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
