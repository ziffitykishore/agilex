<?php
/**
 * @var $block \Magento\Framework\View\Element\Template
 */
?>
<?php
$name = $block->getNameInLayout();
foreach ($block->getChildNames($name) as $childName) {
    $childBlock = $block->getChildBlock($childName);
    echo $childBlock
        ->setOption($block->getOption())
        ->setSelection($block->getSelection())
        ->toHtml();
}
?>
