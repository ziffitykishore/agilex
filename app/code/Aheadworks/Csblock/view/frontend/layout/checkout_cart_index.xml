<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <block class="Aheadworks\Csblock\Block\Csblock" name="csblock_cart_menu_top" as="csblock_cart_menu_top" before="navigation.sections" />
            <block class="Aheadworks\Csblock\Block\Csblock" name="csblock_cart_menu_bottom" as="csblock_cart_menu_bottom" after="navigation.sections" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Aheadworks\Csblock\Block\Csblock" name="csblock_cart_content_top" as="csblock_cart_content_top" before="checkout.cart" />
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block class="Aheadworks\Csblock\Block\Csblock" name="csblock_cart_sidebar_top" as="csblock_cart_sidebar_top" before="-" />
            <block class="Aheadworks\Csblock\Block\Csblock" name="csblock_cart_sidebar_bottom" as="csblock_cart_sidebar_bottom" after="-" />
        </referenceContainer>
        <referenceContainer name="page.bottom">
            <block class="Aheadworks\Csblock\Block\Csblock" name="csblock_cart_page_bottom" as="csblock_cart_content_sidebar_bottom" after="-" />
        </referenceContainer>
    </body>
</page>
