<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <quickorder>
            <general>
                <enabled>1</enabled>
                <route_name>quick-order</route_name>
                <page_title>Quick Order</page_title>
                <message>You don't have right to access this page. Please contact us for further information</message>
                <allow_customer_group>1</allow_customer_group>
                <quickorder_label>Quick Order</quickorder_label>
                <show_quickorder_button>next_searchbox</show_quickorder_button>
            </general>
            <search>
                <minimum_character>2</minimum_character>
                <limit_search_results>6</limit_search_results>
                <display_product_image>1</display_product_image>
            </search>
            <design>
                <heading_background_color>#0099e5</heading_background_color>
                <heading_text_color>#ffffff</heading_text_color>
                <heading_background_button>#0099e5</heading_background_button>
            </design>
        </quickorder>
    </default>
</config>
