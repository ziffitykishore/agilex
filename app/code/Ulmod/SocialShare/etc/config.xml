        <umsocialshare>
            <general>
                <enabled>0</enabled>
            </general>
            <service>
                <display_services>display_all_services</display_services>
            </service>
            <page>
				<home>
					<home_page>0</home_page>
					<home_page_mobile>1</home_page_mobile>
					<home_page_mobile_maxwidth>768</home_page_mobile_maxwidth>					
