					<cms_page>0</cms_page>
					<cms_page_mobile>1</cms_page_mobile>
					<cms_page_mobile_maxwidth>768</cms_page_mobile_maxwidth>					
				</cms>	
				<category>
					<category_page>0</category_page>
					<category_page_mobile>1</category_page_mobile>
					<category_page_mobile_maxwidth>768</category_page_mobile_maxwidth>					
				</category>	
				<product>
					<product_page>1</product_page>
					<product_page_mobile>1</product_page_mobile>
					<product_page_mobile_maxwidth>768</product_page_mobile_maxwidth>					
				</product>					
            </page>				
        </umsocialshare>
