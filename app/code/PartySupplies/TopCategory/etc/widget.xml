<?xml version="1.0" encoding="UTF-8"?> 
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="partysupplies_topcategory" class="PartySupplies\TopCategory\Block\Widget\CategoryWidget">
        <label translate="true">Top Category Widget</label>
        <description>Store Default 1st level Category List Widget</description>
        <parameters>
            <parameter name="parentcat" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Select Categories</label>
                <block class="PartySupplies\TopCategory\Block\Adminhtml\Category\Widget\Chooser" />
            </parameter>
            <parameter name="title" xsi:type="text" visible="true" required="true">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="topcategory" value="PartySupplies_TopCategory::widget/categorywidget.phtml">
                        <label translate="true">Top Categories Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
