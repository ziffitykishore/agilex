<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="confirmcustomer">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to confirm the selected customers?</message>
                        <title translate="true">Confirm Customer(s)</title>
                    </confirm>
                    <url path="aconfirmation/index/massConfirmCustomers"/>
                    <type>confirmcustomer</type>
                    <label translate="true">Confirm Customer</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>