<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Ziffity\Banners\Api\ImageRepositoryInterface" type="Ziffity\Banners\Model\ImageRepository" />
    <preference for="Ziffity\Banners\Api\Data\ImageInterface" type="Ziffity\Banners\Model\Image" />
    <virtualType name="BannersDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Ziffity\Banners\Model\Resource\Image\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">BannersDataGridFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Ziffity\Banners\Model\ResourceModel\Image\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">ziffity_images</argument>
            <argument name="resourceModel" xsi:type="string">Ziffity\Banners\Model\ResourceModel\Image</argument>
        </arguments>
    </virtualType>
    <virtualType name="BannersImageUploader" type="Ziffity\Banners\Model\Uploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="const">Ziffity\Banners\Model\Uploader::IMAGE_TMP_PATH</argument>
            <argument name="basePath" xsi:type="const">Ziffity\Banners\Model\Uploader::IMAGE_PATH</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="banners_image_grid_data_source" xsi:type="string">Ziffity\Banners\Model\ResourceModel\Image\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Ziffity\Banners\Model\UploaderPool">
        <arguments>
            <argument name="uploaders" xsi:type="array">
                <item name="image" xsi:type="string">BannersImageUploader</item>
            </argument>
        </arguments>
    </type>
    <type name="Ziffity\Banners\Controller\Adminhtml\Image\Upload">
        <arguments>
            <argument name="uploader" xsi:type="object">BannersImageUploader</argument>
        </arguments>
    </type>
    <type name="Ziffity\Banners\Ui\Component\Listing\Column\Image">
        <arguments>
            <argument name="imageModel" xsi:type="object">BannersImageUploader</argument>
        </arguments>
    </type>
    <type name="Ziffity\Banners\Controller\Adminhtml\Image\MassDelete">
        <arguments>
            <argument name="successMessage" xsi:type="string" translate="true">A total of %1 record(s) have been deleted.</argument>
            <argument name="errorMessage" xsi:type="string" translate="true">An error occurred while deleting record(s).</argument>
        </arguments>
    </type>
</config>