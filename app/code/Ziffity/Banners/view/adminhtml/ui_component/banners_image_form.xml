<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">banners_image_form.banners_image_form_data_source</item>
            <item name="deps" xsi:type="string">banners_image_form.banners_image_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Image Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">image_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Ziffity\Banners\Block\Adminhtml\Image\Edit\Buttons\Back</item>
            <item name="delete" xsi:type="string">Ziffity\Banners\Block\Adminhtml\Image\Edit\Buttons\Delete</item>
            <item name="reset" xsi:type="string">Ziffity\Banners\Block\Adminhtml\Image\Edit\Buttons\Reset</item>
            <item name="save" xsi:type="string">Ziffity\Banners\Block\Adminhtml\Image\Edit\Buttons\Save</item>
            <item name="save_and_continue" xsi:type="string">Ziffity\Banners\Block\Adminhtml\Image\Edit\Buttons\SaveAndContinue</item>
        </item>
    </argument>
    <dataSource name="banners_image_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Ziffity\Banners\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">banners_image_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">image_id</argument>
            <argument name="requestFieldName" xsi:type="string">image_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="banners/image/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="image_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Image Details</item>
            </item>
        </argument>
        <field name="image_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Image ID</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">image</item>
                    <item name="dataScope" xsi:type="string">image_id</item>
                </item>
            </argument>
        </field>

        <field name="image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">image</item>
                    <item name="label" xsi:type="string" translate="true">Image</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Ziffity_Banners/image-preview</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="banners/image/upload/field/image"/>
                    </item>
                </item>
            </argument>
        </field>

        <field name="image_code">
            <argument name="data" xsi:type="array">
               <item name="options" xsi:type="array">
                    <item name="1" xsi:type="array">
                        <item name="value" xsi:type="string">banner</item>
                        <item name="label" xsi:type="string" translate="true">Banner</item>
                    </item>
                    <item name="2" xsi:type="array">
                        <item name="value" xsi:type="string">mobilelogo</item>
                        <item name="label" xsi:type="string" translate="true">Mobile Logo</item>
                    </item>
                </item>                
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Image Code</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">image</item>
                    <item name="dataScope" xsi:type="string">image_code</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>                
            </argument>
        </field>
        
        <field name="position">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">image</item>
                    <item name="label" xsi:type="string" translate="true">Position</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">position</item>
                </item>
            </argument>
        </field>
        
        <field name="link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">image</item>
                    <item name="label" xsi:type="string" translate="true">Link</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">link</item>
                </item>
            </argument>
        </field>
        
    </fieldset>
</form>