<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">webforms_data_form.webforms_data_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Data Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Ziffity\Webforms\Block\Adminhtml\Data\Edit\Buttons\Back" />
            <button name="delete" class="Ziffity\Webforms\Block\Adminhtml\Data\Edit\Buttons\Delete" />
            <button name="reset" class="Ziffity\Webforms\Block\Adminhtml\Data\Edit\Buttons\Reset" />
            <button name="save" class="Ziffity\Webforms\Block\Adminhtml\Data\Edit\Buttons\Save" />
            <button name="save_and_continue" class="Ziffity\Webforms\Block\Adminhtml\Data\Edit\Buttons\SaveAndContinue" />
        </buttons>
        <namespace>webforms_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>webforms_data_form.webforms_data_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="webforms_data_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="webforms/data/save"/>
        </settings>
        <dataProvider class="Ziffity\Webforms\Model\DataProvider" name="webforms_data_form_data_source">
            <settings>
                <requestFieldName>cust_id</requestFieldName>
                <primaryFieldName>cust_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="data_details">
        <settings>
            <label/>
        </settings>
        <field name="cust_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>cust_id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Page</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>        
        <field name="cust_name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>cust_name</dataScope>
            </settings>
        </field>
        <field name="cust_email" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>cust_email</dataScope>
            </settings>
        </field>
        <field name="cust_phone" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Phone</label>
                <dataScope>cust_phone</dataScope>
            </settings>
        </field>
        <field name="cust_comments" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Comments</label>
                <dataScope>cust_comments</dataScope>
            </settings>
        </field>
        <field name="cust_find" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Find Your Coin</label>
                <dataScope>cust_find</dataScope>
            </settings>
        </field>
        <field name="cust_addr_one" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Address</label>
                <dataScope>cust_addr_one</dataScope>
            </settings>
        </field>
        <field name="cust_city" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>cust_city</dataScope>
            </settings>
        </field>
        <field name="cust_state" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">State</label>
                <dataScope>cust_state</dataScope>
            </settings>
        </field>
        <field name="cust_zip" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">ZipCode</label>
                <dataScope>cust_zip</dataScope>
            </settings>
        </field>                         
    </fieldset>
</form>
