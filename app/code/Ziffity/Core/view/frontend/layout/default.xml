<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Ziffity\Core\Block\Customer\MyOrder\Link" name="my-orders-top-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Orders</argument>
                    <argument name="sortOrder" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="social-login-popup" remove="true"/>
        <referenceBlock name="osc.additional.content" remove="true"/>
    </body>
</page>
