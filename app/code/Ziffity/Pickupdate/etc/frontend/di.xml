<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Block\Onepage">
        <arguments>
            <argument name="layoutProcessors" xsi:type="array">
                <item name="pickupDate" xsi:type="object">Ziffity\Pickupdate\Block\Checkout\LayoutProcessor</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="pickupDate" xsi:type="object">Ziffity\Pickupdate\Model\PickupdateConfigProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Sales\Block\Items\AbstractItems">
        <plugin name="Ziffity_Pickupdate::OrderInfo" type="Ziffity\Pickupdate\Plugin\Order\Info" />
    </type>
</config>