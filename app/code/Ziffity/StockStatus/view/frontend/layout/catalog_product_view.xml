<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="alert.urls">
            <block class="Ziffity\StockStatus\Block\Product\View\Stock" name="productalert.stock" as="productalert_stock" template="Ziffity_StockStatus::product/view.phtml">
                <action method="setHtmlClass">
                    <argument name="value" xsi:type="string">stock</argument>
                </action>
                <action method="setSignupLabel">
                    <argument translate="true" name="value" xsi:type="string">Notify Me</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
