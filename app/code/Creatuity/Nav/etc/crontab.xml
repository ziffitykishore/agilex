<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="nav_product_update" instance="Creatuity\Nav\Cron\ProductUpdateCronJob" method="execute">
            <config_path>crontab/default/jobs/nav_product_update/schedule/cron_expr</config_path>
        </job>

        <job name="nav_order_update" instance="Creatuity\Nav\Cron\OrderUpdateCronJob" method="execute">
            <config_path>crontab/default/jobs/nav_order_update/schedule/cron_expr</config_path>
        </job>

        <job name="nav_shipment_update" instance="Creatuity\Nav\Cron\ShipmentUpdateCronJob" method="execute">
            <config_path>crontab/default/jobs/nav_shipment_update/schedule/cron_expr</config_path>
        </job>
    </group>
</config>
