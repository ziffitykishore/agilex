<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sales_order_invoice_grid.ai_sales_order_invoice_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>sales_order_invoice_columns</spinner>
        <deps>
            <dep>sales_order_invoice_grid.ai_sales_order_invoice_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="ai_sales_order_invoice_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_Sales::sales_invoice</aclResource>
        <dataProvider class="Wyomind\AdvancedInventory\Ui\Component\DataProvider\DataProvider" name="ai_sales_order_invoice_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filters name="listing_filters">
            <filterSelect name="assigned_to">
                <argument name="optionsProvider" xsi:type="configurableObject">
                    <argument name="class" xsi:type="string">Wyomind\AdvancedInventory\Model\ResourceModel\Sales\Grid\AssignationArray</argument>
                </argument>
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="provider" xsi:type="string">${ $.parentName }</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">componentType = column, index = ${ $.index }:visible</item>
                        </item>
                        <item name="caption" xsi:type="string" translate="true">Select...</item>
                        <item name="dataScope" xsi:type="string">assigned_to</item>
                        <item name="label" xsi:type="string" translate="true">Assigned to</item>
                        <item name="filter" xsi:type="string" translate="true">Assigned to</item>
                    </item>
                </argument>
            </filterSelect>
        </filters>
    </listingToolbar>
    <columns name="sales_order_invoice_columns">
        <column name="assigned_to" class="Wyomind\AdvancedInventory\Ui\Component\Listing\Column\AssignedTo">
            <argument name="data" xsi:type="array">
                <item name="js_config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
                </item>
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="align" xsi:type="string">left</item>
                    <item name="label" xsi:type="string" translate="true">Order Assignation</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>