<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="mconnect" translate="label" sortOrder="300">
            <label>M-Connect Media</label>
        </tab>
        <section id="mconnect_ajaxlogin" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
		
            <label>Ajax Login</label>
            <tab>mconnect</tab>            
            <resource>Mconnect_Ajaxlogin::config_ajaxlogin</resource>
			
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
			 
                <label>General Setting (Ajaxlogin)</label>			
				
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">			
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                
                </field>
				
				
                <field id="redirect" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>RedirectSelect</label>
                    <source_model>Mconnect\Ajaxlogin\Model\Source\RedirectSelect</source_model>
                </field>
                
                <field id="signup_offer_popup" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Signup Offer Popup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>   
                </field>	
				
            </group>
            <group id="signup_offer" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Signup Offer</label>               
                <field id="signup_promo_rules" translate="label comment" type="select" sortOrder="6" showInDefault="3" showInWebsite="1" showInStore="1">
                    <label>Customer Signup Offer</label>
                    <source_model>Mconnect\Ajaxlogin\Model\Config\Source\SalesRules</source_model>             
                </field>
            </group>
            <group id="banner" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Banner Image</label>   
                <field id="banner_id" translate="label comment" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Image</label>
                    <backend_model>Mconnect\Ajaxlogin\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">mconnect/banner</base_url>
                </field>
            </group>
            		
        </section>
        
                        		
    </system>
</config>
