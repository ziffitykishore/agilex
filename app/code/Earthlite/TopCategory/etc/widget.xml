<?xml version="1.0" encoding="UTF-8"?> 
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="Earthlite_topcategory" class="Earthlite\TopCategory\Block\Widget\CategoryWidget">
        <label translate="true">Top Category Widget</label>
        <description>Store Default 1st level Category List Widget</description>
        <parameters>
            <parameter name="parentcat" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Select Categories</label>
                <block class="Earthlite\TopCategory\Block\Adminhtml\Category\Widget\Chooser" />
            </parameter>
            <parameter name="anchor_text" xsi:type="text" visible="true">
                <label translate="true">Anchor Custom Text</label>
                <description translate="true">If empty, we'll use the category name here.</description>
            </parameter>
            <parameter name="title" xsi:type="text" visible="true" required="true">
                <label translate="true">Custom Title</label>
            </parameter>
            <parameter name="user" xsi:type="select" required="true" visible="true">
                <label translate="true">Select User</label>
                <options>
                    <option name="default" value="all_user" selected="true">
                        <label translate="true">All User</label>
                    </option>
                    <option name="guest_b2c" value="guest_b2c">
                        <label translate="true">Guest / B2C</label>
                    </option>
                    <option name="b2b_user" value="b2b_user">
                        <label translate="true">B2B User</label>
                    </option>
                </options>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="topcategory" value="Earthlite_TopCategory::widget/categorywidget.phtml">
                        <label translate="true">Top Categories Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="top_category">
                <template name="topsubcategory" value="default" />
                <template name="topcategory" value="topcategory" />
            </container>
        </containers>
    </widget>
</widgets>
