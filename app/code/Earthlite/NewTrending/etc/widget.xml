<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="earthlite_new_trending" class="Earthlite\NewTrending\Block\Category\NewTrendingList">
        <label translate="true">New Trending List</label>
        <description translate="true">New Trending List Products</description>
        <parameters>   
            <parameter name="title" sort_order="10" visible="true" xsi:type="text">
                <label>Title</label>
            </parameter>
            <parameter name="new_trending_category" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Select Category</label>
                <block class="Magento\Catalog\Block\Adminhtml\Category\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string" translate="true">Select Category...</item>
                        </item>
                    </data>
                </block>            
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="newtrendinglist" value="Earthlite_NewTrending::widget/new_trending_list.phtml">
                        <label translate="true">New Trending Template</label>
                    </option>
                    <option name="megamenu.newtrendinglist" value="Earthlite_NewTrending::widget/mmenu_new_trending_list.phtml">
                        <label translate="true">Megamenu New Trending Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="new_trending">                
                <template name="newtrendinglist" value="newtrendinglist" />
            </container>            
        </containers>
    </widget>
</widgets>
