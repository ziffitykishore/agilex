<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="earthlite" translate="label" sortOrder="300">
            <label>EarthLite</label>
        </tab>
        <section id="earthlite_category" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Category Page</label>
            <tab>earthlite</tab>
            <group id="new_trending" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>New Trending Configuration</label>
                <field id="from_date" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>From Date</label>
                    <frontend_model>Earthlite\NewTrending\Block\DatePicker</frontend_model>
                </field>
                <field id="to_date" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>To Date</label>
                    <frontend_model>Earthlite\NewTrending\Block\DatePicker</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>