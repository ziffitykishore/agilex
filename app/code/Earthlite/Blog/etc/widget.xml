<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="blog_recent_post" class="Mirasvit\Blog\Block\Sidebar\Recent">
        <label translate="true">Blog Recent Posts Sidebar</label>
        <description translate="true">List of Blog Posts</description>
        <parameters>
            <parameter name="page_size" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Posts to display</label>
                <value>5</value>
            </parameter>
            <parameter name="image_width" xsi:type="text" required="true" visible="true">
                <label translate="true">Image width (px)</label>
                <value>75</value>
            </parameter>
            <parameter name="image_height" xsi:type="text" required="true" visible="true">
                <label translate="true">Image height (px)</label>
                <value>50</value>
            </parameter>
        </parameters>
    </widget>
    <widget id="blog_recent_post_large" class="Mirasvit\Blog\Block\Post\Recent">
        <label translate="true">Blog Recent Posts Homepage</label>
        <description translate="true">List of Blog Posts</description>
        <parameters>
            <parameter name="page_size" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Posts to display</label>
                <value>5</value>
            </parameter>
            <parameter name="image_width" xsi:type="text" required="true" visible="true">
                <label translate="true">Image width (px)</label>
                <value>780</value>
            </parameter>
            <parameter name="image_height" xsi:type="text" required="true" visible="true">
                <label translate="true">Image height (px)</label>
                <value>480</value>
            </parameter>
        </parameters>
    </widget>
</widgets>
