<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">        
    
    <!-- layernavigation search colllection factory -->
    <virtualType name="Earthlite\LayerNavigation\Api\Search\DocumentFactory" type="Magento\Framework\Api\Search\DocumentFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">Earthlite\LayerNavigation\Api\Search\Document</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\Search\SearchResponseBuilder">
        <arguments>
            <argument name="documentFactory" xsi:type="object">Earthlite\LayerNavigation\Api\Search\DocumentFactory</argument>
        </arguments>
    </type>

    <!-- Filter module arguments -->
    <type name="Magento\Catalog\Model\Layer\Filter\Item">
        <plugin name="layer_filter_item_url" type="Earthlite\LayerNavigation\Plugin\Model\Layer\Filter\Item" sortOrder="1"/>
    </type>
    <type name="Magento\Swatches\Block\LayeredNavigation\RenderLayered">
        <plugin name="layer_filter_item_swatch_url" type="Earthlite\LayerNavigation\Plugin\Block\Swatches\RenderLayered" sortOrder="1"/>
    </type>
    <type name="Magento\CatalogSearch\Model\Adapter\Mysql\Filter\Preprocessor">
        <plugin name="layer_filter_item_swatch_url" type="Earthlite\LayerNavigation\Plugin\Model\Adapter\Preprocessor" sortOrder="1"/>
    </type> 
</config>