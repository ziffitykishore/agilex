    <type name="Algolia\AlgoliaSearch\Helper\Entity\CategoryHelper">
        <plugin name="SomethingDigital_Algolia_FixGetCoreCategories" type="SomethingDigital\AlgoliaSearch\Plugin\FixGetCoreCategories"/>
