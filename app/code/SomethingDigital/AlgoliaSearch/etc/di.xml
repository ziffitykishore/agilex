    </type>
    <type name="Magento\Catalog\Model\ResourceModel\Eav\Attribute">
        <plugin name="SomethingDigital_Algolia_Save_Configuration" type="SomethingDigital\AlgoliaSearch\Plugin\SaveConfigurationToAlgolia"/>
