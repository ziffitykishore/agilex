<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <type name="banner">
        <appearances>
            <appearance name="collage-left"
                        master_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/collage-left/master"
                        preview_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/collage-left/preview">
                <elements>
                    <element name="main">
                        <style name="justify_content" source="justify_content" persistence_mode="read"/>
                        <attribute name="fullbleed" source="data-fullbleed"/>
                    </element>
                    <element name="layout_wrapper">
                        <style name="justify_content" source="justify_content"/>
                        <static_style source="display" value="flex"/>
                        <static_style source="flex_direction" value="column"/>
                    </element>
                </elements>
            </appearance>
            <appearance name="collage-right"
                        master_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/collage-right/master"
                        preview_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/collage-right/preview">
                <elements>
                    <element name="main">
                        <style name="justify_content" source="justify_content" persistence_mode="read"/>
                        <attribute name="fullbleed" source="data-fullbleed"/>
                    </element>
                    <element name="layout_wrapper">
                        <style name="justify_content" source="justify_content"/>
                        <static_style source="display" value="flex"/>
                        <static_style source="flex_direction" value="column"/>
                    </element>
                </elements>
            </appearance>
            <appearance name="poster"
                        master_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/poster/master"
                        preview_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/poster/preview">
                <elements>
                    <element name="main">
                        <style name="justify_content" source="justify_content" persistence_mode="read"/>
                        <attribute name="fullbleed" source="data-fullbleed"/>
                    </element>
                    <element name="layout_wrapper">
                        <style name="justify_content" source="justify_content"/>
                        <static_style source="display" value="flex"/>
                        <static_style source="flex_direction" value="column"/>
                    </element>
                </elements>
            </appearance>
            <appearance name="collage-centered"
                        master_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/collage-centered/master"
                        preview_template="SomethingDigital_PageBuilderCustomizations/content-type/banner/collage-centered/preview">
                <elements>
                    <element name="main">
                        <style name="justify_content" source="justify_content" persistence_mode="read"/>
                        <attribute name="fullbleed" source="data-fullbleed"/>
                    </element>
                    <element name="layout_wrapper">
                        <style name="justify_content" source="justify_content"/>
                        <static_style source="display" value="flex"/>
                        <static_style source="flex_direction" value="column"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
