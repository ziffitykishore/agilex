<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\PageBuilder\Model\WidgetInitializerConfig">
        <arguments>
            <argument name="config" xsi:type="array">
                <item name="products" xsi:type="array">
                    <item name="grid" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/products/appearance/grid/widget</item>
                    </item>
                </item>
                <item name="banner" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/banner/appearance/default/widget</item>
                    </item>
                </item>
                <item name="collapsible" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/collapsible/appearance/default/widget</item>
                    </item>
                </item>
                <item name="fullslider" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/fullslider/appearance/default/widget</item>
                        <!--optional if you want load widget per appearance-->
                        <item name="appearance" xsi:type="string">default</item>
                    </item>
                </item>
                <item name="fullslide" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <!--required argument-->
                        <item name="component" xsi:type="string">Magento_PageBuilder/js/widget/show-on-hover</item>
                        <!--optional if you need provide some config for your widget-->
                        <item name="config" xsi:type="array">
                            <item name="buttonSelector" xsi:type="string">.pagebuilder-slide-button</item>
                            <item name="showOverlay" xsi:type="string">hover</item>
                            <item name="dataRole" xsi:type="string">slide</item>
                        </item>
                    </item>
                </item>
                <item name="tabs" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/tabs/appearance/default/widget</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>
    <!-- Add new widget for category listing in PageBuilder -->
    <type name="Magento\PageBuilder\Model\Stage\RendererPool">
        <arguments>
            <argument name="renderers" xsi:type="array">
                <item name="categories" xsi:type="object">Magento\PageBuilder\Model\Stage\Renderer\WidgetDirective</item>
            </argument>
        </arguments>
    </type>
    <!-- PageBuilder core issue fix -->
    <type name="Magento\PageBuilder\Model\Stage\Preview">
        <plugin name="pagebuilder_issue" type="SomethingDigital\PageBuilderCustomizations\Plugin\Preview"/>
    </type>
</config>
