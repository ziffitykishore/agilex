<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\PageBuilder\Model\WidgetInitializerConfig">
        <arguments>
            <argument name="config" xsi:type="array">
                <item name="products" xsi:type="array">
                    <item name="grid" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/products/appearance/grid/widget</item>
                    </item>
                </item>
                <item name="banner" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/banner/appearance/default/widget</item>
                    </item>
                </item>
                <item name="collapsible" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="component" xsi:type="string">SomethingDigital_PageBuilderCustomizations/js/content-type/collapsible/appearance/default/widget</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>
    <!-- Add new widget for category listing in PageBuilder -->
    <type name="Magento\PageBuilder\Model\Stage\RendererPool">
        <arguments>
            <argument name="renderers" xsi:type="array">
                <item name="categories" xsi:type="object">Magento\PageBuilder\Model\Stage\Renderer\WidgetDirective</item>
            </argument>
        </arguments>
    </type>
</config>
