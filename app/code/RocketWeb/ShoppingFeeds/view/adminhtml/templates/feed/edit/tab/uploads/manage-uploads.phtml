                    <th class="data-grid-th col-mode required"><?php echo $block->escapeHtml(__('Mode')) ?></th>
                    <th class="data-grid-th col-host required"><?php echo $block->escapeHtml(__('Host')) ?></th>
                    <th class="data-grid-th col-port required"><?php echo $block->escapeHtml(__('Port')) ?></th>
                    <th class="data-grid-th col-username required"><?php echo $block->escapeHtml(__('Username')) ?></th>
                    <th class="data-grid-th col-password required"><?php echo $block->escapeHtml(__('Password')) ?></th>
                    <th class="data-grid-th col-path"><?php echo $block->escapeHtml(__('Path')) ?></th>
                    <th class="data-grid-th col-gzip"><?php echo $block->escapeHtml(__('Gzip')) ?></th>
                    <th class="data-grid-th col-delete"><?php echo $block->escapeHtml(__('Action')) ?></th>
                </tr>
            </thead>
