<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        
        <referenceBlock name="product.info.review" remove="true"/>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.stock.sku" destination="product.info.main" after="product.info.price"/>
       <move element="product.info.overview" destination="product.info.main" after="product.info.price" />
        <referenceContainer name="content">
         <container name="pdp-container" htmlClass="pdp container" htmlTag="div" before="-">
                <container name="pdp-info" htmlClass="pdp-info" htmlTag="div"/>
            </container>
        </referenceContainer>
<move element="product.info.media" destination="pdp-container" after="pdp-info"/>
<move element="product.info.main" destination="pdp-container" after="product.info.media" />
    </body>
</page>
