<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="pdp-container" htmlClass="pdp" htmlTag="div" before="-">
                <container name="pdp-info" htmlClass="pdp-info" htmlTag="div"/>
            </container>
            <referenceBlock name="product.info.options.default">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Magento_Catalog::product/view/type/default.phtml</argument>
                </action>
            </referenceBlock>
            <referenceBlock name="product.info.sku">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Magento_Catalog::product/view/attribute.phtml</argument>
                </action>
            </referenceBlock>

            <!-- customer who brought -->
            <block class="Ziffity\Filteredproducts\Block\CustomerWhoBought" name="custom_products" template="Ziffity_Filteredproducts::pdpList.phtml">
                <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="category.product.addto" as="addto">
                    <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare"
                           name="category.product.addto.compare" as="compare"
                           template="Magento_Catalog::product/list/addto/compare.phtml"/>
                </block>
            </block>
        </referenceContainer>

       <referenceBlock name="product.info.details">
          <block class="Magento\Catalog\Block\Product\View" name="product.shopcsn.guarantee" template="Magento_Catalog::product/view/guarantee_tab.phtml" group="detailed_info">
             <arguments>
                <argument translate="true" name="title" xsi:type="string">ShopCSNTV - 100% Guarantee</argument>
             </arguments>
          </block>
        </referenceBlock>        

        <move element="product.info.media" destination="pdp-container" after="pdp-info"/>
        <move element="product.info.main" destination="pdp-container" after="product.info.media" />
        <referenceBlock name="product.info.review" remove="true"/>
        <referenceBlock name="product.info.mailto" remove="true"/>
        <referenceBlock name="view.addto.compare" remove="true" />
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.stock.sku" destination="product.info.main" after="product.info.price"/>
        <move element="product.info.overview" destination="product.info.main" after="product.info.price" />
        <move element="product.info.social" destination="product.info.form.content" after="-" />
        <referenceContainer name="product.info.media">
            <block class="Magento\Catalog\Block\Product\View" name="sale_badge" template="Magento_Catalog::product/view/sale.phtml"/>
        </referenceContainer>
        <referenceBlock name="breadcrumbs" template="Magento_Theme::html/breadcrumbs.phtml"/>
    </body>
</page>
