<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header-wrapper" >
            <!--            <container name="user.actionlist" htmlTag="div" htmlClass="user-actionlist" after="top.search" >
                <container name="user.welcome" htmlTag="ul" />
            </container>-->
            <container name="header.toplink" htmlTag="div" htmlClass="user-actionlist" after="top.search">
                <block class="Magento\Customer\Block\Account\Customer" name="csn_customer" as="csn_customer" template="Magento_Customer::account/customer.phtml" before="wish-list-link" />       
               
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-orders-link-top" after="wish-list-link" >
                    <arguments>
                        <argument name="path" xsi:type="string">sales/order/history</argument>
                        <argument name="label" xsi:type="string" translate="true">My Orders</argument>
                    </arguments>
                </block>                   
                <block class="Magento\Wishlist\Block\Link" name="wish-list-link" />
                  <block class="Magento\Customer\Block\Account\AuthorizationLink" name="authorization-link-login" template="account/link/authorization.phtml" after="customer-account-navigation-orders-link-top"/>
            </container>
            <!--                <container name="user.welcome" htmlTag="ul" />-->
        </referenceContainer>
        
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">148</argument>
                <argument name="logo_img_height" xsi:type="number">43</argument>
            </arguments>
        </referenceBlock>     
        <move element="header" destination="user.welcome" />
        <move element="minicart" destination="header-wrapper" after="user.actionlist" />
    
        <!--      <move element="top.links" destination="user.actionlist" after="user.welcome" />-->

        <referenceBlock name="header.panel" remove="true" />
        <referenceBlock name="advanced-search-link" remove="true"/>



        <referenceContainer name="footer" htmlClass="page-footer__content">
            <container name="footer.news-wrapper" htmlClass="footer-news-wrapper" htmlTag="div"/>
            <container name="footerlogo" label="Footer Logo" htmlTag="div" after="footer.news-wrapper" htmlClass="footer-logo text-center">
                <container name="footer.logo-container" htmlClass="container" htmlTag="div">
                    <block class="Magento\Cms\Block\Block" name="footer.logo" >
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer_logo</argument>
                        </arguments>
                    </block>
                </container>
            </container>

            <container name="footer.grid-wrapper" htmlClass="footer-links-wrapper" htmlTag="div">
                <container name="footer.grid-container" htmlClass="container" htmlTag="div">
                    <container name="footerlinks" as="footer" label="Footer Links" htmlTag="div"  htmlClass="footer-links">
                        <block class="Magento\Cms\Block\Block" name="footer.links" >
                            <arguments>
                                <argument name="block_id" xsi:type="string">footer_links</argument>
                            </arguments>
                        </block>
                    </container> 
                  
                </container>
            </container>
            <container name="footer.copy-wrapper" htmlClass="footer-copy-wrapper" htmlTag="div">
                <container name="footer.copy-container" htmlClass="container" htmlTag="div"/>
            </container>

             
            
        </referenceContainer>

        
        
        <!-- Footer blocks END-->
        <move element="form.subscribe" destination="footer.news-wrapper"/>
        <move element="copyright" destination="footer.copy-container"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
    </body>
</page> 