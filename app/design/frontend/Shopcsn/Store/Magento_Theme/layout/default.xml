<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
    <body>
        <referenceContainer name="before.body.end">
            <block  class="Magento\Framework\View\Element\Template" template="Magento_Theme::social-block.phtml" name="social.icons" />
        </referenceContainer>
        <referenceContainer name="header-wrapper" >
            <container name="csn-links"  htmlTag="div" htmlClass="user-actionlist acc-links" after="top.search">
                <block class="Magento\Framework\View\Element\Html\Links" name="header.links" >
                    <arguments>
                        <argument name="css_class" xsi:type="string">header links</argument>
                    </arguments>
                </block>
            </container>
           
        </referenceContainer>
        <container name="csn-info" htmlClass="csn-info" htmlTag="div">
            <block class="Ziffity\Header\Block\Header" name="csn.info" template="Ziffity_Header::header.phtml" />           
        </container>  
           
        <move element="csn-info" destination="page.top"/>
        <move element="breadcrumbs" destination="csn-info" before="csn.info" />
        
        
        <referenceContainer name="footer" htmlClass="page-footer__content">
            <container name="footer.news-wrapper" htmlClass="footer-news-wrapper" htmlTag="div"/>
<!--            <container name="footerlogo" label="Footer Logo" htmlTag="div" after="footer.news-wrapper" htmlClass="footer-logo text-center">
                <container name="footer.logo-container" htmlClass="container" htmlTag="div">
                    <block class="Magento\Cms\Block\Block" name="footer.logo" >
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer_logo</argument>
                        </arguments>
                    </block>
                </container>
            </container>-->

            <container name="footer.grid-wrapper" htmlClass="footer-links-wrapper" htmlTag="div">
                <container name="footer.grid-container" htmlClass="container" htmlTag="div">
                    <container name="footerlinks" as="footer" label="Footer Links" htmlTag="div"  htmlClass="footer-links">
                        <block class="Magento\Cms\Block\Block" name="footer.links" >
                            <arguments>
                                <argument name="block_id" xsi:type="string">footer_links</argument>
                            </arguments>
                        </block>
                    </container> 
                  
                </container>
            </container>
            <container name="footer.copy-wrapper" htmlClass="footer-copy-wrapper" htmlTag="div">
                <container name="footer.copy-container" htmlClass="copyright-inner" htmlTag="div"/>
            </container>
 
        </referenceContainer>
        <!-- Footer blocks END-->
          <move element="header" destination="user.welcome" />
        <move element="form.subscribe" destination="footer.news-wrapper"/>
        <move element="copyright" destination="footer.copy-container" />
        <move element="footer.copy-wrapper" destination="footerlinks" after="payment-method" />
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <move element="store.menu" destination="header-wrapper" after="logo"/>
        <referenceBlock name="navigation.sections" remove="true" />
        <referenceBlock name="header.panel" remove="true" />
        <move element="csn-info" destination="main" before="-" />
        <referenceBlock name="advanced-search-link" remove="true"/>
        <referenceBlock name="catalog.compare.link" remove="true"/>
    </body>
</page>