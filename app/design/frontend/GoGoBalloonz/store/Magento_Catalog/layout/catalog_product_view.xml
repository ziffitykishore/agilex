<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.stock.sku" destination="product.info.price" after="product.price.final"/>
        <move element="product.info.review" destination="product.info.main" before="product.info.price"/>

        <referenceContainer name="content">
            <container name="product-info-wrap" htmlClass="product-info-wrap" htmlTag="div" before="-">
                <container name="product-info-inner" htmlClass="product-info-inner" htmlTag="div"/>
            </container>
        </referenceContainer>

        <move element="product.info.media" destination="product-info-inner" before="-"/>
        <move element="product.info.main" destination="product-info-inner" after="product.info.media" />
        <!--<move element="product.info.social" destination="product.info.addtocart" after="-"/>-->

        <move element="product.info.sku" destination="product.info.main" after="page.main.title"/>
        <move element="product.info.overview" destination="product.info.main" before="product.info.price"/>

        <referenceBlock name="product.info.mailto" remove="true"/>
        <referenceBlock name="view.addto.compare" remove="true" />

        
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="balloonz_position" template="product/view/baloonz_position.phtml" group="detailed_info" >
               <arguments>
                    <argument translate="true" name="title" xsi:type="string">Balloon Float Times</argument>
                    <argument name="sort_order" xsi:type="string">10</argument>
               </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View" name="cancellation" template="product/view/cancellations.phtml" group="detailed_info" >
               <arguments>
                    <argument translate="true" name="title" xsi:type="string">Cancellations</argument>
                    <argument name="sort_order" xsi:type="string">40</argument>
               </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View" name="customer_service" template="product/view/customer_service.phtml" group="detailed_info" >
               <arguments>
                    <argument translate="true" name="title" xsi:type="string">Customer Service</argument>
                    <argument name="sort_order" xsi:type="string">20</argument>
               </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View" name="substitutions" template="product/view/substitutions.phtml" group="detailed_info" >
               <arguments>
                    <argument translate="true" name="title" xsi:type="string">Substitutions</argument>
                    <argument name="sort_order" xsi:type="string">30</argument>
               </arguments>
            </block>
        </referenceBlock>        

        <referenceBlock name="product.info.upsell" remove="true" />
    </body>
</page>
