<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   
    <body>       
        <referenceBlock name="header.panel" remove="true" />
        <referenceBlock name="wish-list-link" remove="true"/>
        <referenceBlock name="catalog.compare.link" remove="true"/>
        <move element="top.links" destination="account-links" after="-"/>
        <move element="minicart" destination="header.container" before="-" />
        <move element="navigation.sections" destination="header-wrapper" after="logo"/>
        <move element="top.search" destination="header-wrapper" after="navigation.sections"/>
        <referenceContainer name="header.container">
            <referenceContainer name="header-wrapper">
                <block class="Magento\Framework\View\Element\Template" name="location" template="Magento_Theme::location.phtml"/>
                <container name="account-links" as="accountLinks" htmlTag="div" htmlClass="account-links" after="location" />
            </referenceContainer>
        </referenceContainer>
        <move element="location" destination="header-wrapper" after="top.search" />

        <referenceContainer name="footer">
            <container name="footertop" label="Footer Top" htmlTag="div"  htmlClass="footer-top"/>
            <container name="footerlinks" label="Footer Links" htmlTag="div"  htmlClass="footer-links">
                <block class="Magento\Cms\Block\Block" name="footer.links" >
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_links</argument>
                    </arguments>
                </block>
            </container>
            <container name="sociallinks" label="Social Links" htmlTag="div"  htmlClass="social-wrapper">
            <block class="Magento\Cms\Block\Block" name="social-links">
                <arguments>
                    <argument name="block_id" xsi:type="string">social-links</argument>
                </arguments>
            </block>
            </container>
        </referenceContainer>

        <move element="form.subscribe" destination="footerlinks"/>
        <move element="sociallinks" destination="form.subscribe"/>
        <move element="copyright" destination="before.body.end"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>


    </body>
</page>
