<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <!--<block class="Magento\Framework\View\Element\Template" name="loader.content" template="Magento_Theme::html/loader.phtml" before="page.wrapper"/>-->
        </referenceContainer>
        <referenceBlock name="header.panel" remove="true" />
        <referenceBlock name="wish-list-link" remove="true"/>
        <referenceBlock name="catalog.compare.link" remove="true"/>
        <move element="top.links" destination="account-links" after="-"/>
        <move element="minicart" destination="page.wrapper" before="header.container" />
        <move element="navigation.sections" destination="header-wrapper" after="logo"/>
        <move element="top.search" destination="header-wrapper" after="navigation.sections"/>
        <referenceContainer name="header.container" htmlClass="page-header header-wrapper">
            <referenceContainer name="header-wrapper" htmlClass="header">
                <container name="account-links"  htmlTag="div" htmlClass="account-links" after="location">
                    <block class="Magento\Framework\View\Element\Html\Links" name="header.links" >
                        <arguments>
                            <argument name="css_class" xsi:type="string">header links</argument>
                        </arguments>
                    </block>
                </container>
            </referenceContainer>
            <container name="nav-right-sec" label="Search Location" htmlTag="div"  htmlClass="nav-right-sec d-flex justify-content-between align-items-center"/>
        </referenceContainer>
        <move element="nav-right-sec" destination="header-wrapper" after="navigation.sections" />
        <move element="account-links" destination="nav-right-sec" after="-"/>
        <move element="top.search" destination="nav-right-sec" before="-"/>
        <move element="store_language" destination="nav-right-sec" after="top.search"/>
        <referenceContainer name="footer">
            <container name="footertop" label="Footer Top" htmlTag="div"  htmlClass="footer-top"/>
            <container name="footermiddle" label="Footer Middle" htmlTag="div"  htmlClass="footer-middle"/>
            <container name="footerlinks" label="Footer Links" htmlTag="div"  htmlClass="footer-links">
                <container name="footerlinks-inner" label="Footer Links Inner" htmlTag="div"  htmlClass="inner-sec row">
                    <block class="Magento\Cms\Block\Block" name="footer.links" >
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer_links</argument>
                        </arguments>
                    </block>
                </container>
            </container>
            <block class="Magento\Theme\Block\Html\Footer" name="footer-logo" template="Magento_Theme::html/footer-top.phtml"/>
            <container name="footerbottom" label="Footer Top" htmlTag="div"  htmlClass="footer-bottom"/>
        </referenceContainer>
        <move element="form.subscribe" destination="footerlinks-inner"/>
        <move element="footer-logo" destination="footertop"/>
        <move element="footerlinks" destination="footermiddle"/>
        <move element="copyright" destination="footerbottom"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
    </body>
</page>
