<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   
    <body>       
        <referenceBlock name="header.panel" remove="true" />
        <referenceBlock name="wish-list-link" remove="true"/>
        <referenceBlock name="catalog.compare.link" remove="true"/>
        <move element="top.links" destination="account-links" after="-"/>
        <move element="wish-list-link" destination="header.links" before="authorization-link"/>
        <move element="minicart" destination="header.container" before="-" />
        <move element="navigation.sections" destination="header-wrapper" after="logo"/>
        <move element="top.search" destination="header-wrapper" after="navigation.sections"/>
        <referenceContainer name="header.container">
            <referenceContainer name="header-wrapper" htmlClass="header">
                <block class="Magento\Framework\View\Element\Template" name="location" template="Magento_Theme::location.phtml"/>
                <container name="account-links" as="accountLinks" htmlTag="div" htmlClass="account-links" after="location" />
            </referenceContainer>
            <container name="header-section" label="Header Section" htmlTag="div"  htmlClass="header-wrapper"/>
            <container name="nav-right-sec" label="Search Location" htmlTag="div"  htmlClass="nav-right-sec d-flex justify-content-between"/>
        </referenceContainer>
        <move element="location" destination="header-wrapper" after="top.search" />
        <move element="nav-right-sec" destination="header-wrapper" after="navigation.sections" />
        <move element="header-wrapper" destination="header-section" after="-" />
        <move element="account-links" destination="nav-right-sec" after="-" />
        <move element="top.search" destination="nav-right-sec" after="-" />
        <move element="location" destination="nav-right-sec" after="-" />
        <referenceContainer name="footer">
            <container name="footertop" label="Footer Top" htmlTag="div"  htmlClass="footer-top"/>
            <container name="footermiddle" label="Footer Middle" htmlTag="div"  htmlClass="footer-middle"/>
            <container name="footerlinks" label="Footer Links" htmlTag="div"  htmlClass="footer-links">
                <block class="Magento\Cms\Block\Block" name="footer.links" >
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_links</argument>
                    </arguments>
                </block>
            </container>
            <block class="Magento\Theme\Block\Html\Footer" name="footer-logo" template="Magento_Theme::html/footer-top.phtml"/>
            <container name="footerbottom" label="Footer Top" htmlTag="div"  htmlClass="footer-bottom"/>
        </referenceContainer>

        <move element="form.subscribe" destination="footerlinks"/>
        <move element="footer-logo" destination="footertop"/>
        <move element="footerlinks" destination="footermiddle"/>
        <move element="copyright" destination="footerbottom"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>


    </body>
</page>
