<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.price.render.bundle.customization" remove="true"/>
        <referenceBlock name="bundle.product.view.options.notice" remove="true"/>
        <referenceBlock name="bundle.back.button" remove="true"/>
        <referenceBlock name="customize.button" remove="true"/>

        <move element="product.info" destination="product.info.main" after="-"/>
        <move element="product.info.social" destination="product.info.addtocart.bundle" after="-"/>
        
        <referenceBlock name="product.info.addtocart.bundle">
            <arguments>
                 <argument name="qtyData" xsi:type="object">PartySupplies\Catalog\ViewModel\Product</argument>
             </arguments>
        </referenceBlock>
    </body>
</page>
