<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        
        <referenceContainer name="content">
            <container name="pdp.info.media" htmlTag="div" htmlClass="pdp-info-media d-md-flex" before="-" />
            
            <container name="product.tab.related" htmlTag="div" htmlClass="product-tab-wrapper" after="product.sticky.option">
                <container name="product.tab.container" htmlTag="div" htmlClass="inner-container"/>
            </container>
            <block class="Magento\Wishlist\Block\Catalog\Product\View\AddTo\Wishlist" name="view.addto.wishlist.custom"
                   template="Magento_Wishlist::catalog/product/view/addto/wishlist.phtml" />
            <block class="Magento\Wishlist\Block\Catalog\Product\View\AddTo\Wishlist" name="view.wishlist.media"
                   template="Magento_Wishlist::catalog/product/view/addto/wishlist.phtml" />
            <block class="Magento\Wishlist\Block\Catalog\Product\View\AddTo\Wishlist" name="view.wishlist.addtocart"
                   template="Magento_Wishlist::catalog/product/view/addto/wishlist.phtml" />

            <container name="product.sticky.option" htmlTag="div" htmlId="PDP-sticky" htmlClass="product-sticky-action" after="pdp.info.media">
                <container name="product.sticky.container" htmlTag="div" htmlClass="sticky-container d-flex justify-content-between align-items-center" after="product.info.media">
                    <block class="Magento\Catalog\Block\Product\View" name="sticky.product.title" template="Magento_Catalog::product/view/sticky-title.phtml"/>
                    <container name="sticky.right.container" htmlTag="div" htmlClass="pdp-sticky-right d-flex align-items-center" >
                        <container name="sticky.product.price.container" htmlTag="div" htmlClass="custom-product-info-price">
                            <block class="Magento\Catalog\Pricing\Render" name="sticky.product.price.final">
                                <arguments>
                                    <argument name="price_render" xsi:type="string">product.price.render.default</argument>
                                    <argument name="price_type_code" xsi:type="string">final_price</argument>
                                    <argument name="zone" xsi:type="string">item_view</argument>
                                </arguments>
                            </block>
                            <block class="Magento\Catalog\Pricing\Render" name="sticky.product.price.tier">
                                <arguments>
                                    <argument name="price_render" xsi:type="string">product.price.render.default</argument>
                                    <argument name="price_type_code" xsi:type="string">tier_price</argument>
                                    <argument name="zone" xsi:type="string">item_view</argument>
                                </arguments>
                            </block>
                        </container>
                        <block class="Magento\Catalog\Block\Product\View" name="sticky.product.info.shipping" template="Magento_Catalog::product/view/shipping.phtml"/>

                        <block class="Magento\Catalog\Block\Product\View" name="product.sticky.action" template="Magento_Catalog::product/view/sticky-action.phtml"/>  
                    </container>
                </container>              
            </container>
        </referenceContainer>
        <referenceContainer name="product.info.stock.sku">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.shipping" template="Magento_Catalog::product/view/shipping.phtml" after="-"/>
        </referenceContainer>

        <move element="product.info.sku" destination="product.info.main" before="product.info.price"/>
        <move element="product.info.stock.sku" destination="product.info.main" after="product.info.price"/>
        <move element="product.info.overview" destination="product.info.main" after="product.info.stock.sku"/>

        <move element="product.info.details" destination="product.tab.container" after="-"/>
        <move element="catalog.product.related" destination="product.tab.container" after="-"/>

        <move element="view.addto.wishlist.custom" destination="custom.product.option" after="-"/>
        <move element="view.addto.wishlist" destination="product.info.addtocart" after="-"/>
        <move element="view.wishlist.addtocart" destination="product.info.addtocart.additional" after="-"/>
        <move element="view.wishlist.media" destination="product.info.media" before="-"/>
        
        <move element="product.info.main" destination="pdp.info.media" after="-"/>
        <move element="product.info.media" destination="pdp.info.media" before="-"/>
       
        <referenceBlock name="product.info.review" remove="true"/>
        <referenceContainer name="product.info.main">            
            <container name="custom.option.container" htmlTag="div" htmlClass="custom-options-container" after="-">
                <block class="Magento\Catalog\Block\Product\View" name="close.custom.product.option" template="Magento_Catalog::product/view/closecustomoption.phtml" before="-"/>
            </container>
            <block class="Magento\Catalog\Block\Product\View" name="custom.product.option" template="Magento_Catalog::product/view/customoption.phtml" after="-"/>
        </referenceContainer>
        <move element="productalert.stock" destination="custom.option.container" before="-" />
        <move element="product.info" destination="custom.option.container" after="close.custom.product.option"/>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="color.stains.tab" template="Magento_Catalog::product/view/tab/color_stains.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Color &#38; Stains</argument>
                    <argument name="sort_order" xsi:type="string">50</argument>
                </arguments>
            </block>
            <block class="Earthlite\DownlodableCatalog\Block\DownloadSpecs" name="download.specs.tab" template="Magento_Catalog::product/view/tab/download_specs.phtml" ifconfig="download_spec/general/enabled" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Download Specifications</argument>
                    <argument name="sort_order" xsi:type="string">70</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="product.info.description">
            <arguments>
                <argument translate="true" name="title" xsi:type="string">Description</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="product.attributes">
            <arguments>
                <argument translate="true" name="title" xsi:type="string">Additional Information</argument>                    
            </arguments>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="cofig.overlay" template="Magento_Catalog::product/configoverlay.phtml" after="-"/>
        </referenceContainer>
        <referenceContainer name="product.info.media">
            <container name="mob.instance.option.container" htmlTag="div" htmlClass="mob product-info-main" before="-">
                <block class="Magento\Catalog\Block\Product\View" name="mob.page.title" template="Magento_Catalog::product/view/mob_product_title.phtml" />            
                <block class="Magento\Catalog\Block\Product\View\Description" name="mob.product.info.sku" template="Magento_Catalog::product/view/attribute.phtml" after="product.info.type">
                    <arguments>
                        <argument name="at_call" xsi:type="string">getSku</argument>
                        <argument name="at_code" xsi:type="string">sku</argument>
                        <argument name="css_class" xsi:type="string">sku</argument>
                        <argument name="at_label" xsi:type="string">default</argument>
                        <argument name="add_attribute" xsi:type="string">itemprop="sku"</argument>
                    </arguments>
                </block>
                <container name="mob.product.info.stock.sku" label="Product auxiliary info" htmlTag="div" htmlClass="product-info-stock-sku">                    
                    <block class="Magento\Catalog\Block\Product\View\Type\Simple" name="mob.product.info.simple" as="product_type_data" template="Magento_Catalog::product/view/type/default.phtml"/>
                    <block class="Magento\Catalog\Block\Product\View" name="mob.product.info.shipping" template="Magento_Catalog::product/view/shipping.phtml"/>
                </container>
                <container name="mob.product.price.container" htmlTag="div" htmlClass="custom-product-info-price">
                    <block class="Magento\Catalog\Pricing\Render" name="mob.product.price.final">
                        <arguments>
                            <argument name="price_render" xsi:type="string">product.price.render.default</argument>
                            <argument name="price_type_code" xsi:type="string">final_price</argument>
                            <argument name="zone" xsi:type="string">item_view</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Catalog\Pricing\Render" name="mob.product.price.tier">
                        <arguments>
                            <argument name="price_render" xsi:type="string">product.price.render.default</argument>
                            <argument name="price_type_code" xsi:type="string">tier_price</argument>
                            <argument name="zone" xsi:type="string">item_view</argument>
                        </arguments>
                    </block>
                </container>
            </container>            
        </referenceContainer>
        <move element="view.wishlist.media" destination="mob.instance.option.container" before="-"/>
    </body>
</page>
