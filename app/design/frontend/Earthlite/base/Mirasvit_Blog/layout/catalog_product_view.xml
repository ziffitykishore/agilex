<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Mirasvit\Blog\Block\Catalog\RelatedPosts" name="posts.tab" as="blog.posts"
                   template="Mirasvit_Blog::catalog/related_posts.phtml" group="detailed_info" after="product.info.description">
                <arguments>
                    <argument name="sort_order" xsi:type="string">999</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
