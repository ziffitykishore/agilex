<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="header.links">
        <block class="Magento\Framework\View\Element\Html\Link" name="sd_contact_us_header_link" after="-">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">Contact Us</argument>
                <argument name="path" xsi:type="string">contact</argument>
                <argument name="sortOrder" xsi:type="number">90</argument>
            </arguments>
        </block>
    </referenceBlock>

    <referenceContainer name="footer">
        <block class="Magento\Cms\Block\Block" name="footer_promo_banner">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_promo_banner</argument>
            </arguments>
        </block>
        <container name="footer-with-banner" htmlTag="div" htmlClass="footer-main-content">
            <container name="footer-links" htmlTag="div" htmlClass="footer-links">
                <block class="Magento\Cms\Block\Block" name="footer_links">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_links</argument>
                    </arguments>
                </block>
            </container>
        </container>
    </referenceContainer>

    <referenceContainer name="footer-container">
        <block class="Magento\Cms\Block\Block" name="footer_promo_banner" before="-">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_promo_banner</argument>
            </arguments>
        </block>
    </referenceContainer>

    <move element="footer.connect" destination="footer" after="-" />
    <move element="copyright" destination="before.body.end" after="-"/>

</page>

