<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="header.links">
        <block class="Magento\Cms\Block\Block" name="header_phone_number">
            <arguments>
                <argument name="block_id" xsi:type="string">header_phone_number</argument>
            </arguments>
        </block>
    </referenceBlock>
    <referenceContainer name="footer">
        <block class="Magento\Cms\Block\Block" name="footer_promo_banner">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_promo_banner</argument>
            </arguments>
        </block>
        <container name="footer-with-banner" htmlTag="div" htmlClass="footer-main-content">
            <container name="footer-links" htmlTag="div" htmlClass="footer-links">
                <block class="Magento\Store\Block\Switcher" name="store_switcher" as="store_switcher" template="Magento_Store::switch/stores.phtml"/>
                <block class="Magento\Cms\Block\Block" name="footer_links">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_links</argument>
                    </arguments>
                </block>
            </container>
        </container>
    </referenceContainer>

    <referenceContainer name="footer-container">
        <block class="Magento\Cms\Block\Block" name="footer_promo_banner" before="-">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_promo_banner</argument>
            </arguments>
        </block>
    </referenceContainer>

    <referenceContainer name="catalog.topnav">
        <container name="quick.order.container" htmlTag="div" htmlClass="quick-order-container"/>
    </referenceContainer>

    <move element="quick_order_link" destination="quick.order.container" before='-' />
    <move element="footer.connect" destination="footer" after="-" />
    <move element="copyright" destination="before.body.end" after="-"/>
    <move element="product.info.extrahint.qtyincrements" destination="product.info.form.content" before='-' />
    <move element="yotpo_bottomline" destination="product.info.stock.sku" after="-"/>
    <move element="navigation.sections" destination="header-wrapper"/>
</page>

