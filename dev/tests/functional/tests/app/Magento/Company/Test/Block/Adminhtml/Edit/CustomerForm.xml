<tabs>
    <customer_view>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#tab_customer_edit_tab_view_content</selector>
        <strategy>css selector</strategy>
        <wrapper>customer</wrapper>
        <fields>
            <company_name>
                <selector>.customer-information</selector>
                <strategy>css selector</strategy>
                <class>Magento\Company\Test\Block\Adminhtml\Edit\Tab\CustomerView\CompanyName</class>
            </company_name>
        </fields>
    </customer_view>
    <account_information>
        <fields>
            <group_id>
                <selector>[name="customer[group_id]"]</selector>
                <class>Magento\Company\Test\Block\Adminhtml\CustomerGroup</class>
            </group_id>
            <company_association>
                <selector>.entry-edit</selector>
                <strategy>css selector</strategy>
                <class>Magento\Company\Test\Block\Adminhtml\Edit\Tab\AccountInformation\CompanyName</class>
            </company_association>
        </fields>
    </account_information>
</tabs>
