                    <?php echo __('Delivery date') . ': ' . $block->escapeHtml($order->getShqDeliveryDate()) ?>
                </div>
            <?php endif; ?>
            <br/>
            <hr style="height:1px;border:0;background:#ddd;margin-bottom:15px;"/>
            <div class="order-shipping-additional">
                <div style="margin-bottom:20px;font-weight:bold;"><?php echo $this->getCarrierGroupTitle(); ?></div>
                <?php echo $cgInfo; ?>
            </div>
        </div>
    </div>
<?php endif; ?>
